{
  "search.exclude": {
    "**/lib": true
  },
  "editor.codeActionsOnSave": {
    "source.sortImports": true,
    "source.addMissingImports": true,
  },
  "files.associations": {
    "*.jsonl": "jupyter",
    "*.jost": "jupyter",
    "*.jwks": "json",
    "*.json": "jsonc"
  },
  "typescript.format.semicolons": "remove",
  "prettier.semi": false,
  "javascript.format.semicolons": "remove",
  "prettier.singleQuote": true
}
