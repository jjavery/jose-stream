{
  "search.exclude": {
    "**/.vscode": true,
    "**/dist": true,
    "/common": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.rush": true
  },
  "editor.codeActionsOnSave": {
    "source.sortImports": true,
    "source.addMissingImports": true,
  },
  "files.associations": {
    "*.jsonl": "jupyter",
    "*.jost": "jupyter",
    "*.jwks": "json",
    "*.json": "jsonc"
  },
  "typescript.format.semicolons": "remove",
  "prettier.semi": false,
  "javascript.format.semicolons": "remove",
  "prettier.singleQuote": true
}
