  "version": "0.2.0",
  "configurations": [
    {
      "args": [],
      "internalConsoleOptions": "openOnSessionStart",
      "name": "jost Mocha Tests",
      "program": "${workspaceFolder}/packages/jost/node_modules/mocha/bin/_mocha",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node",
      "cwd": "${workspaceFolder}/packages/jost/src"
    },
    {
      "args": [],
      "internalConsoleOptions": "openOnSessionStart",
      "name": "jost-cmd Mocha Tests",
      "program": "${workspaceFolder}/packages/jost-cmd/node_modules/mocha/bin/_mocha",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node",
      "cwd": "${workspaceFolder}/packages/jost-cmd"
    },
    {
      "name": "jost encrypt",
      "program": "${workspaceFolder}/packages/jost-cmd/dist/jost.js",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node",
      "cwd": "${workspaceFolder}/packages/jost-cmd",
      "args": [
        "encrypt",
        // "--no-compress",
        "-i",
        "fixtures/identity.jwks.json",
        "-R",
        "fixtures/recipients.jwks.json",
        "-o",
        "LICENSE.jost.jsonl",
        "LICENSE"
      ]
    },
    {
      "name": "jost decrypt",
      "program": "${workspaceFolder}/packages/jost-cmd/dist/jost.js",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node",
      "cwd": "${workspaceFolder}/packages/jost-cmd",
      "args": [
        "decrypt",
        "-i",
        "fixtures/identity.jwks.json",
        "-o",
        "LICENSE_output",
        "LICENSE.jost.jsonl"
      ]
    },
    {
      "name": "jost keygen",
      "program": "${workspaceFolder}/packages/jost-cmd/dist/jost.js",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node",
      "cwd": "${workspaceFolder}/packages/jost-cmd",
      "args": ["keygen", "-o", "fixtures/identity.jwks.json"]
    },
    {
      "name": "jost export",
      "program": "${workspaceFolder}/packages/jost-cmd/dist/jost.js",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node",
      "cwd": "${workspaceFolder}/packages/jost-cmd",
      "args": ["export", "-i", "fixtures/identity.jwks.json"]
    }
  ]
}
